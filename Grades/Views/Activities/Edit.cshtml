@model Activity

<h2>Editar Actividad</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="SubjectId" class="control-label">Materia</label>
        <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.Subjects">
            <option value="">-- Seleccionar Materia --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Type" class="control-label">Tipo de Actividad</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Grade" class="control-label">Calificaci√≥n</label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Date" class="control-label">Fecha</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>