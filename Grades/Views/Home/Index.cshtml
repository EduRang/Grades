@model Grades.Models.IndexViewModel

<h2>Lista de Materias</h2>

@if (Model.Subjects == null || !Model.Subjects.Any())
{
    <p>No hay materias disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td>@subject.Id</td>
                    <td>@subject.Name</td>
                    <td>
                        <a asp-controller="Subjects" asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning">Editar</a>
                        <a asp-controller="Subjects" asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h2>Lista de Actividades</h2>

@if (Model.Activities == null || !Model.Activities.Any())
{
    <p>No hay actividades disponibles.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo</th>
                <th>Calificación</th>
                <th>Fecha</th>
                <th>Materia</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model.Activities)
            {
                <tr>
                    <td>@activity.Id</td>
                    <td>@activity.Type</td>
                    <td>@activity.Grade</td>
                    <td>@activity.Date.ToShortDateString()</td>
                    <td>@(Model.Subjects?.FirstOrDefault(s => s.Id == activity.SubjectId)?.Name)</td>
                    <td>
                        <a asp-controller="Activities" asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-warning">Editar</a>
                        <a asp-controller="Activities" asp-action="Delete" asp-route-id="@activity.Id" class="btn btn-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
